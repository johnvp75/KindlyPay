<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/blackgrey</item>
        <item name="android:buttonStyle">@style/kindlyButton</item>
        <item name="android:editTextStyle">@style/KindlyEdit</item>
    </style>

    <style name="kindlyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KindlyEdit" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
